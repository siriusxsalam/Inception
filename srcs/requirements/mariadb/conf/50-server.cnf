# MySQL Server Configuration
[mysqld]

# MySQL user
user = mysql

# PID file location
pid-file = /run/mysqld/mysqld.pid

# Socket file location
socket = /run/mysqld/mysqld.sock

# Port for incoming connections
port = 3306

# Base directory for MySQL installation
basedir = /usr

# Data directory for storing databases
datadir = /var/lib/mysql

# Temporary directory for temporary files
tmpdir = /tmp

# Directory for language files
lc-messages-dir = /usr/share/mysql

# IP address to bind to (0.0.0.0 means all available network interfaces)
bind_address = 0.0.0.0

# Character set for the server
character-set-server = utf8mb4

# Collation for the server
collation-server = utf8mb4_general_ci

# Skip networking restriction (allow connections from any host)
skip-networking = false

# Query cache size
query_cache_size = 32M

# Enable console logging
console = true